# Database Configuration
DATABASE_URL=postgresql://user:password@hostname:port/database

# Stripe API Keys (for payment features)
# Test environment keys
STRIPE_TEST_SECRET_KEY=sk_test_...
VITE_STRIPE_TEST_PUBLISHABLE_KEY=pk_test_...

# Live environment keys (only needed in production)
STRIPE_LIVE_SECRET_KEY=sk_live_...
VITE_STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_...

# Stripe webhook configuration (optional)
STRIPE_WEBHOOK_SECRET=whsec_...

# Email Service Configuration (if using email features)
MAILJET_API_KEY=...
MAILJET_API_SECRET=...
MAILJET_SENDER_EMAIL=noreply@yourdomain.com
MAILJET_SENDER_NAME=Your App Name

# Other Environment Variables
NODE_ENV=production
PORT=5000