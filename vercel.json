{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**/*.ts", "shared/**/*.ts"],
        "maxLambdaSize": "50mb",
        "nodeVersion": "20.x"
      }
    },
    {
      "src": "index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/public/**"],
        "nodeVersion": "20.x"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/_next/(.*)",
      "dest": "/dist/public/_next/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/dist/public/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/dist/public/favicon.ico"
    },
    {
      "src": "/(.*\\.[a-z0-9]{1,})",
      "dest": "/dist/public/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}